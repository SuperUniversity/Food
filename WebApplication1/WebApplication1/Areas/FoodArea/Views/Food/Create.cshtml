@model WebApplication1.Areas.FoodArea.Models.Food

@{
    ViewBag.Title = "商品新增";
}

@section styles{
    <style>
        body {
            background-color: aquamarine;
        }
    </style>
}

@*<h2>Create</h2>*@

@using (Html.BeginForm("Create", "Food", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{

    <div class="form-group">
        @Html.LabelFor(f => f.FoodName, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EditorFor(f => f.FoodName, new { htmlAttributes = new { placeholder = "Food Name", @class = "form-control" } })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(f => f.CategoryID, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @{
                var categories = new SelectList(ViewBag.datas, "CategoryID", "CategoryName");
            }
            @Html.DropDownListFor(f => f.CategoryID, categories, "請選擇", new { @class = "form-control" })
        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(f => f.price, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(f => f.price, new { htmlAttributes = new { placeholder = "price", @class = "form-control" } })
            </div>
        </div>

            <div class="form-group">
                @Html.LabelFor(f => f.RestaurantName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(f => f.RestaurantName, new { htmlAttributes = new { placeholder = "RestaurantName", @class = "form-control" } })
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(f => f.Foodpicture, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(f => f.Foodpicture, new { htmlAttributes = new { type = "file", placeholder = "Product Image", @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(f => f.Description, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(f => f.Description, new { htmlAttributes = new { placeholder = "Description", @class = "form-control" } })
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">新增</button>
                    <div>@ViewBag.message</div>
                </div>
            </div>

                }




